# -*- coding: utf-8 -*-
from django import forms
from django.forms.widgets import TextInput, Select, DateInput
from django.contrib.localflavor.br.forms import BRStateChoiceField
from cep.widgets import CEPInput

from home.models import Clientes

class ClientesCadastrarForm(forms.ModelForm):
    cpf = forms.CharField(
        label=u'CPF',
        max_length=14,
        widget=forms.TextInput(
            attrs={
                'class': 'input_cpf',
                'placeholder': '___.___.___-__',
            },
        ),
    )
    cep = forms.CharField(
        label=u'CEP',
        max_length=9,
        help_text='Ao inserir o CEP, os dados do endereço serão preenchidos automaticamente.',
        widget=CEPInput(
            address={
                'street': 'id_end',
                'district': 'id_bairro',
                'city': 'id_cidade',
                'state': 'id_uf',
            },
            attrs={
                'class': 'input_cep',
                'placeholder': '_____-___',
            },
        ),
    )
    tel_fixo = forms.CharField(
        label=u'Telefone Fixo',
        required=False,
        max_length=14,
        widget=forms.TextInput(
            attrs={
                'class': 'input_tel_fixo',
                'placeholder': '(__) ____-____',
            },
        ),
    )
    tel_cel = forms.CharField(
        label=u'Telefone Celular',
        max_length=14,
        widget=forms.TextInput(
            attrs={
                'class': 'input_tel_cel',
                'placeholder': '(__) ____-____',
            },
        ),
    )
    tel_trab = forms.CharField(
        label=u'Telefone do Trabalho',
        required=False,
        max_length=14,
        widget=forms.TextInput(
            attrs={
                'class': 'input_tel_trab',
                'placeholder': '(__) ____-____',
            },
        ),
    )

    class Meta:
        model = Clientes
        exclude = ('multa')
        widgets = {
            'nome': TextInput(
                attrs={
                    'class': 'input_nome',
                    'placeholder': 'Digite o nome',
                },
            ),
            'dt_nascimento': DateInput(
                attrs={
                    'class': 'input_dt_nascimento',
                    'placeholder': '__/__/____',
                    'maxlength': '10',
                },
            ),
            'rg': TextInput(
                attrs={
                    'class': 'input_rg',
                    'placeholder': 'Digite o RG',
                },
            ),
            'end': TextInput(
                attrs={
                    'class': 'input_end',
                    'placeholder': 'Digite o endereço',
                },
            ),
            'end_comp': TextInput(
                attrs={
                    'class': 'input_end_comp',
                    'placeholder': 'Digite o complemento',
                },
            ),
            'bairro': TextInput(
                attrs={
                    'class': 'input_bairro',
                    'placeholder': 'Digite o bairro',
                },
            ),
            'cidade': TextInput(
                attrs={
                    'class': 'input_cidade',
                    'placeholder': 'Digite a cidade',
                    },
            ),
            'uf': Select(
                attrs={
                       'class': 'input_uf',
                },
            ),
            'email': TextInput(
                attrs={
                    'class': 'input_email',
                    'placeholder': 'Digite o email',
                },
            ),
        }

    class Media:
         css = {
             'all': ('site/clientes/form.css',)
         }
         js = ('site/clientes/form.js', 'site/jquery-mask/jquery.mask.min.js',)


